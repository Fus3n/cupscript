######## Lists/function #########

func join(elements, sep)
	var res = ""

	for i = 0 till len(elements) then
		var d = elements>i
		var res = res + d + if i == len(elements) - 1 then "" else sep # one liners XD
	end

	return res
end

var res = join(["Hello", "world"], ", ")
print(res) # >> Hello, world

